<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context="com.example.waqas.hisaabkitaab.Tablayout_Fragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_toolbar"
        android:layout_gravity="center"
        android:background="@color/backgroundColor"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/SelectedTabColor"
        app:tabMode="scrollable"
        app:tabPaddingEnd="30dp"
        app:tabPaddingStart="30dp"
        app:tabSelectedTextColor="@color/SelectedTabColor"
        app:tabTextAppearance="@style/SizeofTab"
        app:tabTextColor="@color/TabTextColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_layout"
        android:background="#f6fafb"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
